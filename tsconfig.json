{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "@common/*": ["common/*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@open-weather/*": ["open-weather/*"],
      "@weather/*": ["weather/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "jest.config.ts"],
  "exclude": ["node_modules", "dist"]
}
